    <CommandPrefix>Project</CommandPrefix> 
    <!--<AppName>Test</AppName>   <Navigate/>-->
    <Example>Launch</Example>
    
    <Command Name="addRectangle">
      <Example> add a test  </Example>
      <ListenFor> add [a] test </ListenFor>
      <Feedback> Adding a test </Feedback>
      <Navigate/>
    </Command>

    <Command Name="addRectangleFromBackground">
      <Example> add a rectangle </Example>
      <ListenFor> add [a] rectangle </ListenFor>
      <Feedback> Adding a rectangle</Feedback>
      <VoiceCommandService Target="VoiceCommandService"/>
    </Command>
    
    
